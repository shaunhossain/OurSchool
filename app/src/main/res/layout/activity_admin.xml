<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.jaminoss.android.ourschool.Admin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:id="@+id/dp"
            android:src="@drawable/profilee"
            android:layout_height="90dp" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_below="@id/dp"
            android:hint="Full Name"
            android:layout_marginBottom="20dp"
            android:id="@+id/name"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:layout_below="@id/name"
            android:hint="Username"
            android:layout_marginBottom="20dp"
            android:id="@+id/uname"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_below="@id/uname"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:hint="Password"
            android:layout_marginBottom="20dp"
            android:id="@+id/pass"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_below="@id/pass"
            android:textSize="15dp"
            android:hint="Department"
            android:id="@+id/dept"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_below="@id/dept"
            android:layout_marginBottom="20dp"
            android:hint="Courses"
            android:id="@+id/Courses"
            android:singleLine="true"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:maxLines="1"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:inputType="number"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:layout_below="@id/Courses"
            android:hint="Phone No"
            android:id="@+id/ph"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:layout_below="@id/ph"
            android:hint="Email"
            android:textSize="15dp"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/role"
            android:layout_below="@id/email"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:id="@+id/rb_std"
                android:text="Student"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_lec"
                android:textColor="#000000"
                android:text="Lecturer"/>
        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybuttons"
            android:layout_below="@id/role"
            android:text="View All Users"
            android:textAllCaps="false"
            android:backgroundTint="#385881"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:id="@+id/view_users"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybuttons"
            android:layout_below="@id/role"
            android:text="Add this User"
            android:fontFamily="sans-serif"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:padding="10dp"
            android:id="@+id/add_user"
            android:backgroundTint="#385881"
            android:textColor="#ffffff"
            />

    </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
